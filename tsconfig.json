{
    "compilerOptions": {
        "target": "ES2021",
        "module": "CommonJS",
        "sourceMap": true,
        "noImplicitAny": true,
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "outDir": "./build",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "./build",
    ],
}